@page
@model T5_PR1.Pages.AddSimulationModel;
@{
	ViewData["Title"] = "Afegir simulació";
}
<h1> @ViewData["Title"]</h1>
<div class="row shadow">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label asp-for="simulacio.DateSimulation"> Data Simulació </label>
				<input asp-for="simulacio.DateSimulation" class="form-control" />
				<span asp-validation-for="simulacio.DateSimulation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="simulacio.EnergyNeeded">Energia necessaria</label>
				<input asp-for="simulacio.EnergyNeeded" class="form-control" />
				<span asp-validation-for="simulacio.EnergyNeeded" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="simulacio.CostEnergy">Cost de l'energia</label>
				<input asp-for="simulacio.CostEnergy" class="form-control" />
				<span asp-validation-for="simulacio.CostEnergy" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="simulacio.PriceEnergy">Preu de l'energia</label>
				<input asp-for="simulacio.PriceEnergy" class="form-control" />
				<span asp-validation-for="simulacio.PriceEnergy" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="simulacio.Rati">Rati</label>
				<input asp-for="simulacio.Rati" class="form-control" />
				<span asp-validation-for="simulacio.Rati" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="simulacio.GeneratedEnergy">Energia generada</label>
				<input asp-for="simulacio.GeneratedEnergy" class="form-control" />
				<span asp-validation-for="simulacio.GeneratedEnergy" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<input type="submit" value="Afegir" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
